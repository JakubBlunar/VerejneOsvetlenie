<Window x:Class="VerejneOsvetlenie.Views.SpravaZaznamovWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VerejneOsvetlenie.Views"
        mc:Ignorable="d"
        Title="SpravaZaznamovWindow"
        Height="auto"
        Width="auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto"
                              MinWidth="200" />
        </Grid.ColumnDefinitions>
        <Grid Row="0"
              Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0">Výber záznamov</TextBlock>
            <ListView Grid.Row="1">

            </ListView>
        </Grid>
        <Grid Grid.Column="1"
              Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Text="Záznamy"
                       Grid.Row="0"></TextBlock>
            <local:TableGenerator Grid.Row="1" />
        </Grid>
        <Grid Grid.Column="2"
              Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Text="Editácia"
                       Grid.Row="0"></TextBlock>
            <local:FormularGenerator Grid.Row="1" />
        </Grid>
    </Grid>
</Window>