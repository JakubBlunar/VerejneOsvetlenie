        <views:TableGenerator HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></views:TableGenerator>-->
    <!--
        <views:TableGenerator DataContext="{Binding SelectTest}"></views:TableGenerator>
    </Grid>-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Row="0">
            <StackPanel Orientation="Horizontal">
                <TextBlock>Vyberte požadovaný výstup:</TextBlock>
                <ComboBox x:Name="OznacenyVystup"
                          ItemsSource="{Binding Vystupy}"></ComboBox>
            </StackPanel>
        </Grid>
        <Grid Row="1">
            <views:TableGenerator DataContext="{Binding ElementName=OznacenyVystup, Path=SelectedItem}" />
        </Grid>
    </Grid>
</Window>
